<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Avatar</td>
      <td>First Name</td>
      <td>Last Name</td>
      <td>Username</td>
      <td>Email</td>
      <td>Mobile Phone</td>
    </tr>
    <% @member.each do |member| %>
      <tr>
        <% unless member.profile_image.nil? %>
          <td><%= image_tag attachment_url(member, :profile_image, :fill, 50, 50) %></td>
        <% end %>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.username %></td>
        <td><%= member.email %></td>
        <td><%= member.mobile_phone %></td>

        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<tr>
<td><%= link_to 'Register', new_member_path %></td>
</tr>
